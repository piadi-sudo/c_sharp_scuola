using System.Runtime.Intrinsics.Arm;

namespace ConsoleApp1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            //variabili
            //:C importo monetario
            //, num_int 


            const int PREZZO_PENNA = 1;
            const int PREZZO_QUADERNO = 4;
            const int PREZZO_ASTUCCIO = 15;

            const int CODE_PENNA = 1;
            const int CODE_QUADERNO = 2;
            const int CODE_ASTUCCIO = 3;

            int quantita_penne = 0;
            int quantita_quaderni = 0;
            int quantita_astucci = 0;

            const int TAB = -10;
            
            //
            int scelta_azione = 0;

            //
            int cod_prodotto = 0;
            int quantita_prodotti = 0;
            int prezzo_finale = 0;

            

            //codice gen.netx()

            do
            {
                Random generatore = new Random();

                quantita_penne = generatore.Next(1, 11);
                quantita_quaderni = generatore.Next(1, 11);
                quantita_astucci = generatore.Next(1, 11);
            } while (quantita_quaderni > quantita_penne || quantita_astucci > quantita_quaderni);




            Console.WriteLine("**il negozio dispone dei seguenti articoli**");
            Console.WriteLine($"{"cod",TAB}{"nome", TAB}{"qnt", TAB}{"prezzo", TAB}");
            Console.WriteLine("- - - - - - - - - - - - - - - - - -");
            Console.WriteLine($"{CODE_PENNA, TAB}{"penna", TAB}{quantita_penne, TAB}{PREZZO_PENNA, TAB}");
            Console.WriteLine($"{CODE_QUADERNO,TAB}{"quaderno",TAB}{quantita_quaderni,TAB}{PREZZO_QUADERNO,TAB}");
            Console.WriteLine($"{CODE_ASTUCCIO,TAB}{"astuccio",TAB}{quantita_astucci,TAB}{PREZZO_ASTUCCIO,TAB}");
            Console.WriteLine("---------------------------------------------------------");
            Console.WriteLine("1. aggiungi al carrello un articolo");
            Console.WriteLine("2. visualizza il carrello ");
            Console.WriteLine("3. svuota il carrello carrello");
            Console.WriteLine("4. procedi al pagamento");
            
            
            // controllo del azione
            do
            {
                Console.Write(">");
                scelta_azione = Convert.ToInt32(Console.ReadLine());
            }while (scelta_azione != 1 && scelta_azione != 2 && scelta_azione != 3 && scelta_azione !=4);

            switch (scelta_azione)
            {
                case 1:

                    Console.Write("inserisci il codice del prodotto: ");
                    cod_prodotto = Convert.ToInt32(Console.ReadLine());

                    Console.Write("inserisci la quantit√†: ");
                    quantita_prodotti = Convert.ToInt32(Console.ReadLine());

                    switch (cod_prodotto)
                    {
                        case 1:
                            quantita_penne -= quantita_prodotti;
                            prezzo_finale = PREZZO_PENNA + quantita_prodotti;


                            break;

                        case 2:
                            quantita_quaderni -= quantita_prodotti;
                            prezzo_finale = PREZZO_QUADERNO + quantita_prodotti;
                            break;

                        case 3:
                            quantita_astucci -= quantita_prodotti;
                            prezzo_finale = PREZZO_ASTUCCIO + quantita_prodotti;
                            break;

                    }


                    break;
            }

        }
    }
}
